# biases optimizer (values as above):
b_opt = 3

# Number of refinements for alpha decay:
nref = 3

# frequence of the wave:
omega = 0.

# phase of the wave:
phi = 0.5

# Kind of dataset:
# 0 Linspaced
# 1 Uniform random
